<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <a href="/coffeeshops/<%= coffeeshop._id %>" class="btn btn-link">
                <i class="fas fa-arrow-left"></i> Back to <%= coffeeshop.title %>
            </a>
        </div>
        <div class="text-center">
            <h1>
                Edit Coffee Shop
            </h1>
        </div>
        <div class="col-md-6 offset-md-3">
            <form action="/coffeeshops/<%= coffeeshop._id %>?_method=PUT" method="post" class="needs-validation"
                novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="coffeeshop[title]" id="title" class="form-control"
                        value="<%= coffeeshop.title %>" required>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="coffeeshop[location]" id="location" class="form-control"
                        value="<%= coffeeshop.location %>" required>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Add More Images</label>
                    <input type="file" class="form-control" name="image" id="image" multiple
                        accept="image/png, image/jpeg, image/jpg">
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price range</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <div class="form-floating">
                            <input type="text" class="form-control" id="price" placeholder="price"
                                name="coffeeshop[price]" value="<%= coffeeshop.price %>" required>
                            <label for="price">0-12</label>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" name="coffeeshop[description]" id="description" class="form-control"
                        required><%= coffeeshop.description %></textarea>
                </div>
                <div class="mb-3">
                    <% coffeeshop.image.forEach(function(img, i) { %>
                        <% if(img.filename !=='' ) { %>
                            <img src="<%= img.url %>" alt="" class="img-thumbnail" style="height: 200px; width: 200px;">
                            <div class="form-check-inline">
                                <input type="checkbox" id="image-<%=i%>" name="deleteImages[]"
                                    value="<%= img.filename %>">
                            </div>
                            <label for="image-<%=i%>">Delete?</label>
                            <% } %>
                                <% }) %>
                </div>

                <div class="mb-3">
                    <button class="btn btn-primary">Update Coffee Shop</button>
                    <a href="/coffeeshops/<%= coffeeshop._id %>" class="btn btn-danger text-end">Cancel</a>
                </div>
            </form>
        </div>
    </div>